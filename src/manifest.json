{
  "manifest_version": 3,
  "name": "IQAlert",
  "description": "Sounds and notifications for Idle Quest RPG",
  "options_page": "options.html",
  "action": {
    "default_popup": "options.html"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png" },
  "web_accessible_resources": [
    {
      "resources": [ "auto.mp3", "boss.mp3", "event.mp3", "beep.mp3", "icon128.png" ],
      "matches": [ "https://www.iqrpg.com/*" ]
    }
  ],
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://www.iqrpg.com/*",
    "https://iqrpg.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://*.iqrpg.com/*"],
      "js": ["iqalert.min.js"],
      "run_at": "document_start"
    }
  ]
}