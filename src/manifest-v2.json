{
  "manifest_version": 2,
  "name": "IQAlert",
  "description": "Sounds and notifications for Idle Quest RPG",
  "permissions": [
    "storage",
    "*://*.iqrpg.com/*"
  ],
  "browser_action": {
    "default_popup": "options.html"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.iqrpg.com/*"
      ],
      "exclude_matches": [
        "*://test.iqrpg.com/*"
      ],
      "js": [
        "iqalert.min.js"
      ],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    "auto.mp3",
    "boss.mp3",
    "event.mp3",
    "beep.mp3",
    "icon128.png",
    "wsproxy.min.js"
  ]
}